{
    "name": "jordanpartridge/conduit-spotify",
    "description": "Spotify integration component for Conduit - Control music during development workflows",
    "type": "library",
    "keywords": [
        "conduit",
        "conduit-component",
        "spotify",
        "music",
        "cli",
        "developer-tools",
        "laravel-zero"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jordan Partridge",
            "email": "jordan@partridge.rocks"
        }
    ],
    "require": {
        "php": "^8.2",
        "glhd/bits": "^0.6.1",
        "guzzlehttp/guzzle": "^7.0",
        "hirethunk/verbs": "^0.7.0",
        "illuminate/console": "^11.0",
        "illuminate/support": "^11.0",
        "laravel-zero/framework": "^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^1.12",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "JordanPartridge\\ConduitSpotify\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JordanPartridge\\ConduitSpotify\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JordanPartridge\\ConduitSpotify\\ServiceProvider"
            ]
        },
        "conduit": {
            "component": true,
            "commands": [
                "spotify:play",
                "spotify:pause",
                "spotify:skip",
                "spotify:next",
                "spotify:current",
                "spotify:volume",
                "spotify:search",
                "spotify:playlists",
                "spotify:queue",
                "spotify:focus",
                "spotify:devices",
                "spotify:login",
                "spotify:logout",
                "spotify:setup",
                "spotify:configure",
                "spotify:analytics"
            ]
        }
    },
    "scripts": {
        "lint": "pint",
        "lint:fix": "pint --dirty",
        "test": "pest",
        "analyse": "phpstan analyse src --level=max",
        "quality": [
            "@lint",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
